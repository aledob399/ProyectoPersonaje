<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreacionPersonaje">

    <TextView
        android:id="@+id/encabezado"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:text="Creacion de un personaje"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"

        />

    <ImageView
        android:id="@+id/img"
        android:layout_width="235dp"
        android:layout_height="197dp"
        android:layout_gravity="center"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginTop="20px"/>

    <EditText
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:hint="Nombre del personaje"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="308dp"
        android:layout_height="35dp"
        android:text="Seleccione la raza"
        android:layout_gravity="center"
        android:layout_marginTop="70px"
        android:textSize="16dp"/>

    <Spinner
        android:id="@+id/raza"
        android:layout_width="305dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:entries="@array/Raza"
        />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="308dp"
        android:layout_height="35dp"
        android:text="Seleccione la clase"
        android:layout_gravity="center"
        android:layout_marginTop="50px"
        android:textSize="16dp"/>
    <Spinner
        android:id="@+id/clase"
        android:layout_width="309dp"
        android:layout_height="27dp"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:entries="@array/Clase"
        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="308dp"
        android:layout_height="35dp"
        android:text="Seleccione el estado vital"
        android:layout_gravity="center"
        android:layout_marginTop="50px"
        android:textSize="16dp"/>
    <Spinner
        android:id="@+id/estadoVital"
        android:layout_width="305dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:entries="@array/EstadoVital"
        />

    <Button
        android:id="@+id/btn"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:text="Crear" />

</LinearLayout>